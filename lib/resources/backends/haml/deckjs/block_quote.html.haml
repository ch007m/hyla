%div{:id=>@id, :class=>['quoteblock', role, ('slide' if option? :step)]}
  - if title?
    .title=title
  %blockquote=content.chomp
  - if (attr? :attribution) or (attr? :citetitle)
    .attribution
      - if attr? :citetitle
        %cite=attr :citetitle
      - if attr? :attribution
        - if attr? :citetitle
          %br
        &#8212; #{attr :attribution}
